<div class='nested-fields'>
  <div class="form-row align-items-center">
    <div class="col-11">
      <%= f.association :category,
                        prompt: 'e.g., homelessness',
                        label: 'What do you care about the most?',
                        label_html: { class: 'label-form' } %>
    </div>
    <div class="col-1">
      <%= link_to_remove_association '', f, class: 'fas fa-minus-circle form-delete-btn' %>
    </div>
  </div>
</div>
