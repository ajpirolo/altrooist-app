<%= simple_form_for(@profile, url: :profile) do |f| %>
  <h3>Locations</h3>
    <div id="locations">
      <%= f.simple_fields_for :locations do |location| %>
        <%= render 'location_fields', f: location %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'add locations', f, :locations %>
      </div>
    </div>
  <h3>Interests</h3>
    <div id="interests">
      <%= f.simple_fields_for :interests do |interest| %>
        <%= render 'interest_fields', f: interest %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'add interests', f, :interests %>
      </div>
    </div>
  <%= f.submit 'Submit' %>
<% end %>
