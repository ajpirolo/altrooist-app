<div>
  <h1><%= @org.name %></h1>
  <p><%= image_tag(@org.photo_url)%></p>
  <p><%= @org.email %></p>
  <p><%= @org.phone %></p>
  <p><%= @org.address %></p>
  <p><%= @org.description %></p>

  <% if @first_entry %>
    <form action="<%= new_organization_journal_entry_path(@org) %>">
      <input type="text" placeholder="Contact <%= @org.name %>">
      <input type="submit" id="contactOrgButton">
    </form>
  <% end %>
  <%= link_to "", new_organization_journal_entry_path(@org), id: "hiddenLink", class: "hidden" %>
</div>
