<div class="navbar-container d-flex">
  <%= image_tag "altrooist_logo_2.png", alt: "Altrooist Logo", class:"navbar-logo"%>

  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <input class="search-string" type="text" name="search[query]" id="search_query" placeholder ="search by city"/>
    <search-bar-button name="search-bar-button" type="submit" class="search-bar-button fas fa-search"/>
  <% end %>

  <div class="navbar_avatar">
    <%= image_tag "https://avatars.githubusercontent.com/u/86730369?v=4", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
      <%= link_to "My Profile", profile_path, class: "dropdown-item" %>
      <%= link_to "My Volunteering", my_organizations_path, class: "dropdown-item" %>
      <%= link_to "My Suggested Organizations", curated_path, class: "dropdown-item" %>
    </div>
  </div>
</div>
