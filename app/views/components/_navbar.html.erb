<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group navbar-search-group">
    <input class="search-bar string required" type="text" name="search[query]" id="search_query" />
    <button name="search-bar-button" type="submit" class="search-bar-button">
      <i class="fas fa-search"></i>
    </button>
  </div>
<% end %>

<div class="navbar_avatar">
  <%= link_to curated_path, class: "navbar_avatar-profile" do %>
  <%= image_tag "https://avatars.githubusercontent.com/u/86730369?v=4" %>
  <% end %>
</div>
