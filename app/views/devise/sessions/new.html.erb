<div class="container pt-4">
  <div class="row justify-content-center">
    <div class="col-9">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mb-3" }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      label_html: { class: "text-dark" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" },
                      label_html: { class: "text-dark" } %>
          <%= f.input :remember_me,
                      as: :boolean,
                      label_html: { class: "text-dark" } if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-info" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
