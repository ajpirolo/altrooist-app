<div class="container pt-4">
  <div class="row justify-content-center">
    <div class="col-9">
      <h2 class="text-primary">Forgot your password?</h2>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "mb-3" }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      label_html: { class: "text-dark" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Send me a reset link", class: "btn btn-info btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
